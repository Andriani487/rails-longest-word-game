<h1>New Games</h1>
<p>Here is your random grid:</p>

<div class="letter-grid">
  <% @letters.each do |letter| %>
    <span><%= letter %></span>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters.join(",") %>

  <label for="word">What is the longest word you can find?</label>
  <input type="text" name="word" id="word" required pattern="[A-Za-z]+">
  <input type="submit" value="Play">
</form>
